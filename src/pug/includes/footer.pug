.footer
    .footer__container 
        .footer__left 
            .footer__logo
                img( src="./img/svg/vector.svg" alt="logo").footer__logo.logo
                span.footer__name LaslesVPN
            .footer__text
                span LaslesVPN is a private virtual network that has unique features and has high security.
            .footer__social
                a(href="https://www.facebook.com"  target="_blank" rel="noopener noreferrer" ).footer__link--social
                    img( src="./img/svg/facebook.svg" alt="facebook")
                a(href="https://www.twitter.com"  target="_blank" rel="noopener noreferrer" ).footer__link--social
                    img( src="./img/svg/twitter.svg" alt="twitter")
                a(href="https://www.instagram.com"  target="_blank" rel="noopener noreferrer" ).footer__link--social
